<style>
    .file-iteme {
        position: relative;
        padding: 0px 20px;
        display: inline-block;
    }
    .layui-icon-close {
        position: absolute;
        top:5px; border:0px solid #666; color:#fff;
        right: 25px;
        z-index: 888
    }

    .file-iteme button {
        margin-top: 5px;
        display: inline-block;
        padding: 5px;
        cursor: pointer;
        font-size: 12px;
    }

    .imgclik{ position:absolute;bottom:7px; left:0px; width:100%; text-align:center;}

        .imgclik span {
            background-color: rgba(0, 0, 0, 0.3); cursor:pointer;
            padding: 6px 17px;color:#fff; border-radius:3px;
            margin: 0px 6px;
        }
    /* 隐藏文件输入框 */
    .hidden-file-input {
        display: none;
    }
